{
  "compilerOptions": {
    "target": "es6",                          
    "module": "commonjs",                                    
    "allowJs": true,
    "outDir": "dist",                          
    "rootDir": "src",
    "strict": false,         
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types/**"],
    "skipLibCheck": true
  }
}